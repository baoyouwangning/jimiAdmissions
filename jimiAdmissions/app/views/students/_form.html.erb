<div id="contact_us" ng-app>
  <h1 id="contact_us_h1">联系我们</h1>

    <div id="form_wrapper" ng-controller="studentCreate">
        <%= form_for(@student) do |f| %>
          <% if @student.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

              <ul>
              <% @student.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :student_name, value="姓名", :id => "stu_name_label" %>
            <%= f.text_field :student_name, :class => "stu_input" %>
          </div>
          <div class="field">
            <%= f.label :obtain_courses, value="学习课程" %>
            <%= f.text_field :obtain_courses, :class => "stu_input", "ng-model" => "inputCourses", "ng-change" => "scanChange();".html_safe,  "ng-click" => "showAndHide('List2','show');".html_safe, "ng-blur" => "showAndHide('List2','hide');".html_safe %>

            <div class="Menu" id="List2">
              <div class="Menu2">
                <ul>
                  <% @course_description_and_prices.to_a.each do |course_description_and_price| %>
                      <li class="courseLists" ng-mousedown="getValue('txt2','<%= course_description_and_price.course_name %>');showAndHide('List2','hide');"><%= course_description_and_price.course_name %></li>
                  <% end %>
                  <li class="courseLists" ng-mousedown="getValue('txt2','clearAll');showAndHide('List2','hide');" id="clearSelect">清空</li>
                </ul>
              </div>
            </div>

          </div>
          <div class="field" id={{field3}}>
            <%= f.label :contact_information, value="联系方式" %>
            <%= f.text_field :contact_information, :class => "stu_input" %>
          </div>
          <div class="actions" id="stu_submit">
            <%= f.submit(value = "提交", :class => "buttonStyle", :id => "{{createButtonStyle}}", "ng-click" => "createStudent()") %>
          </div>
        <% end %>
    </div>
</div>