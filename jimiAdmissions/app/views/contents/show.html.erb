<div id="wrapper">
    <div id="header">
      <div id="banner_auto">
        <div id="banner_logo">
          <img id="jimi" src="./images/common/Jimi.png">
          <img id="Tec" src="./images/common/Technology.png">
          <img id="IT" src="./images/index/IT.png">
        </div>
      </div>
    </div>

    <div id="main_content">
        <p id="notice"><%= notice %></p>

        <p>
          <!--<strong>Bannerdescription:</strong>-->
          <%= @content.bannerDescription %>
        </p>

        <div class="title_content">
            <%= image_tag("contents/teachingAims.png") %>
            <h1>NO.1&nbsp;&nbsp;教学目标</h1>
        </div>
        <p>
          <%= @content.teachingAims %>
        </p>

        <div class="title_content">
          <%= image_tag("contents/faculty.png") %>
            <h1>NO.2&nbsp;&nbsp;师资力量</h1>
        </div>
        <p>
          <%= @content.faculty %>
        </p>

        <div class="title_content">
          <%= image_tag("contents/courseDescriptionAndPrice.png") %>
            <h1>NO.3&nbsp;&nbsp;课程简介及价格</h1>
        </div>
        <p>
          <%= @content.courseDescriptionAndPrice %>
        </p>

        <div class="title_content">
           <%= image_tag("contents/relationships.png") %>
           <h1>NO.4&nbsp;&nbsp;关系网</h1>
        </div>
        <p>
          <%= @content.relationships %>
        </p>
    </div>

    <%= render 'students/form' %>

    <%= link_to 'Edit', edit_content_path(@content) %> |
    <%= link_to 'Back', contents_path %>

    <%= render 'footer' %>

</div>
